{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "XDebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
              "/var/www/html/": "${workspaceRoot}/app/" // Cambia el /app/ por tu carpeta de desarrollo
            },
            "cwd": "${workspaceFolder}/app/", // Cambia el /app/ por tu carpeta de desarrollo
            "serverReadyAction": {
                "action": "openExternally",
            }
        }
    ]
}